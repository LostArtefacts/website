<Layout wide={{ true }} active="home">
  <section class="hero left">
    <div class="hero-content-image" style="background-image: url('{{ url_for('static', filename='trx_hero.webp') }}')"></div>
    <div class="hero-content-wrapper">
      <div class="hero-content">
        <a href="{{ url_for('trx_landing') }}"><img class="logo" src="{{ url_for('static', filename='trx_logo.png') }}"></a>
