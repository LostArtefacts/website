          <Link external={{ false }} href={{ socials.discord }} icon={{ catalog.irender('IconDiscord') }}>
            Hang around on Discord
          </Link>
        </li>
        <li class="social">
          <Link external={{ false }} href={{ socials.github }} icon={{ catalog.irender('IconGitHub') }}>
            Code and report bugs on GitHub
          </Link>
        </li>
        <li class="social">
          <Link external={{ false }} href={{ socials.youtube }} icon={{ catalog.irender('IconYouTube') }}>
            Watch latest releases on YouTube
          </Link>
        </li>
      </ul>
    </Card>

